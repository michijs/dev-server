{
  "name": "@michijs/dev-server",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/michijs/dev-server.git"
  },
  "main": "bin/index",
  "bin": {
    "michi-server": "bin/index.js"
  },
  "description": "Development server based on esbuild",
  "files": [
    "bin/"
  ],
  "baseUrl": "./src",
  "scripts": {
    "dist": "tsc",
    "link": "npm run dist && npm link --force && tsc -w",
    "publish-patch-version": "npm version patch && npm run publish-npm",
    "publish-npm": "npm run dist && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "@types/yargs": "17.0.0",
    "lint-staged": "13.1.0",
    "rome": "11.0.0",
    "simple-git-hooks": "2.8.1"
  },
  "keywords": [
    "react",
    "javascript",
    "css",
    "bundler",
    "typescript",
    "compiler",
    "jsx",
    "commonjs",
    "minifier",
    "tsx",
    "esm",
    "server",
    "development"
  ],
  "dependencies": {
    "typescript": "4.9.4",
    "esbuild": "0.17.4",
    "open": "8.4.0",
    "yargs": "17.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "rome check --apply-suggested"
  }
}
