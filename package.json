{
  "name": "@michijs/dev-server",
  "license": "MIT",
  "version": "0.3.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/michijs/dev-server.git"
  },
  "main": "bin/index",
  "exports": {
    "types": "./bin/index.d.ts",
    "default": "./bin/index.js"
  },
  "bin": {
    "michi-server": "bin/index.js"
  },
  "description": "Development server based on esbuild",
  "files": [
    "bin/"
  ],
  "type": "module",
  "baseUrl": "./src",
  "scripts": {
    "dist": "tsc",
    "link": "npm run dist && npm link --force && tsc -w",
    "publish-patch-version": "npm version patch && npm run publish-npm",
    "publish-npm": "npm run dist && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "18.16.3",
    "@types/yargs": "17.0.24",
    "lint-staged": "13.2.2",
    "rome": "12.0.0",
    "simple-git-hooks": "2.8.1"
  },
  "keywords": [
    "react",
    "javascript",
    "css",
    "bundler",
    "typescript",
    "compiler",
    "jsx",
    "commonjs",
    "minifier",
    "tsx",
    "esm",
    "server",
    "development"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "dependencies": {
    "@types/web-app-manifest": "1.0.2",
    "esbuild": "0.17.18",
    "node-watch": "0.7.3",
    "open": "9.1.0",
    "sharp": "0.32.1",
    "yargs": "17.7.1"
  },
  "peerDependencies": {
    "typescript": "5.0.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "rome check --apply",
      "rome format --write"
    ]
  }
}
