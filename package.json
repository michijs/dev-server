{
  "name": "@michijs/dev-server",
  "license": "MIT",
  "version": "0.2.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/michijs/dev-server.git"
  },
  "main": "bin/index",
  "bin": {
    "michi-server": "bin/index.js"
  },
  "description": "Development server based on esbuild",
  "files": [
    "bin/"
  ],
  "baseUrl": "./src",
  "scripts": {
    "dist": "tsc",
    "link": "npm run dist && npm link --force && tsc -w",
    "publish-patch-version": "npm version patch && npm run publish-npm",
    "publish-npm": "npm run dist && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "18.15.10",
    "@types/yargs": "17.0.24",
    "lint-staged": "13.2.0",
    "rome": "12.0.0",
    "simple-git-hooks": "2.8.1"
  },
  "keywords": [
    "react",
    "javascript",
    "css",
    "bundler",
    "typescript",
    "compiler",
    "jsx",
    "commonjs",
    "minifier",
    "tsx",
    "esm",
    "server",
    "development"
  ],
  "dependencies": {
    "@types/web-app-manifest": "^1.0.2",
    "esbuild": "0.17.14",
    "node-watch": "0.7.3",
    "open": "9.1.0",
    "typescript": "5.0.2",
    "yargs": "17.7.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "rome check --apply",
      "rome format --write"
    ]
  }
}
