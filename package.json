{
  "name": "@michijs/server",
  "license": "MIT",
  "version": "0.0.34",
  "repository": {
    "type": "git",
    "url": "https://github.com/michijs/server.git"
  },
  "main": "bin/index",
  "bin": {
    "michi-server": "bin/index.js"
  },
  "description": "Development server based on esBuild",
  "files": [
    "bin/"
  ],
  "baseUrl": "./src",
  "scripts": {
    "dist": "tsc",
    "link": "npm run dist && npm link --force && tsc -w",
    "test-tsc": "tsc --noEmit --skipLibCheck",
    "publish-patch-version": "npm version patch && npm run publish-npm",
    "publish-npm": "npm run dist && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^17.0.2",
    "@types/websocket": "^1.0.4",
    "@types/yargs": "17.0.0",
    "lint-staged": "13.1.0",
    "rome": "11.0.0",
    "simple-git-hooks": "^2.8.1"
  },
  "dependencies": {
    "esbuild": "0.15.12",
    "open": "8.4.0",
    "typescript": "4.9.4",
    "websocket": "1.0.34",
    "yargs": "^17.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "rome check --apply-suggested"
  }
}
