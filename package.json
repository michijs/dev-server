    "css",
    "bundler",
    "typescript",
    "compiler",
    "jsx",
    "commonjs",
    "minifier",
    "tsx",
    "esm",
    "server",
    "development"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "dependencies": {
    "@types/web-app-manifest": "1.0.7",
    "esbuild": "0.19.5",
    "node-watch": "0.7.4",
    "open": "9.1.0",
    "puppeteer": "21.5.2",
    "sharp": "0.32.6",
    "yargs": "17.7.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.4"
