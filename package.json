{
  "name": "@michijs/server",
  "license": "MIT",
  "version": "0.0.31",
  "repository": {
    "type": "git",
    "url": "https://github.com/michijs/server.git"
  },
  "main": "bin/index",
  "bin": {
    "michi-server": "bin/index.js"
  },
  "description": "Development server based on esBuild",
  "files": [
    "bin/"
  ],
  "baseUrl": "./src",
  "scripts": {
    "build": "tsc",
    "link": "npm run build && npm link --force && tsc -w",
    "publish-patch-version": "npm version patch && npm run publish-npm",
    "publish-npm": "npm run build && npm publish --access public"
  },
  "eslintConfig": {
    "extends": "@michijs/eslint-config",
    "rules": {
      "@typescript-eslint/no-var-requires": 0
    }
  },
  "devDependencies": {
    "@michijs/eslint-config": "0.1.0",
    "@types/node": "^17.0.2",
    "@types/websocket": "^1.0.4",
    "@types/yargs": "^17.0.0",
    "eslint": "^7.19.0",
    "jest": "^29.2.1",
    "lint-staged": "^10.5.4",
    "simple-git-hooks": "^2.2.0"
  },
  "dependencies": {
    "esbuild": "^0.15.12",
    "open": "^8.4.0",
    "typescript": "^4.8.4",
    "websocket": "^1.0.34",
    "yargs": "^17.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix"
  }
}
