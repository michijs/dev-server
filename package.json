{
  "name": "@lsegurado/ls-server",
  "license": "MIT",
  "version": "0.0.29",
  "repository": {
    "type": "git",
    "url": "https://github.com/lsegurado/ls-server.git"
  },
  "main": "bin/index",
  "bin": {
    "ls-server": "bin/index.js"
  },
  "description": "Development server based on esBuild",
  "files": [
    "bin/"
  ],
  "baseUrl": "./src",
  "scripts": {
    "build": "tsc",
    "link": "npm run build && npm link --force && tsc -w",
    "publish-patch-version": "npm version patch && npm run publish-npm",
    "publish-npm": "npm run build && npm publish --access public"
  },
  "eslintConfig": {
    "extends": "@lsegurado/eslint-config-ls-element",
    "rules": {
      "@typescript-eslint/no-var-requires": 0
    }
  },
  "devDependencies": {
    "@lsegurado/eslint-config-ls-element": "0.0.7",
    "@types/node": "^16.11.1",
    "@types/websocket": "^1.0.4",
    "@types/yargs": "^17.0.0",
    "eslint": "^7.19.0",
    "lint-staged": "^10.5.4",
    "simple-git-hooks": "^2.2.0"
  },
  "dependencies": {
    "esbuild": "^0.14.2",
    "open": "^8.3.0",
    "typescript": "^4.4.4",
    "websocket": "^1.0.34",
    "yargs": "^17.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix"
  }
}
