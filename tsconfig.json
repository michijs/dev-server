{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "bin",
        "target": "esnext",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}